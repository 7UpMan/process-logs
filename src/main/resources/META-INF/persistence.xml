<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="processlog" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.s4apps.processlog.model.ApacheLog</class>
        <class>com.s4apps.processlog.model.DeleteIp</class>
        <class>com.s4apps.processlog.model.DeleteMethod</class>
        <class>com.s4apps.processlog.model.DeleteServer</class>
        <class>com.s4apps.processlog.model.DeleteUrl</class>
        <class>com.s4apps.processlog.model.IgnoreIp</class>
        <class>com.s4apps.processlog.model.IgnoreMethod</class>
        <class>com.s4apps.processlog.model.IgnoreServer</class>
        <class>com.s4apps.processlog.model.IgnoreUrl</class>
        <class>com.s4apps.processlog.model.ProcessedLog</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
